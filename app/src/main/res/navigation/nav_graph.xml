<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/SplashFragment">

    <fragment
        android:id="@+id/SplashFragment"
        android:name="com.recipe.app.ui.splash.SplashFragment"
        tools:layout="@layout/fragment_splash" />


    <fragment
        android:id="@+id/RecipesFragment"
        android:name="com.recipe.app.ui.recipes.RecipesFragment"
        tools:layout="@layout/recipes_fragment">

        <action
            android:id="@+id/from_recipes_to_details"
            app:destination="@id/DetailsFragment" />

    </fragment>


    <fragment
        android:id="@+id/DetailsFragment"
        android:name="com.recipe.app.ui.details.DetailsFragment"
        tools:layout="@layout/details_fragment" />

</navigation>